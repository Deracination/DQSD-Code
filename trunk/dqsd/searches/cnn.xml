<search function="cnn">
  <name>CNN News</name>
  <description>
    Search for news topics at CNN.com.<br/>
    <div class="helpboxDescLabels">Example:</div>
    <table class="helpboxDescTable">
  		<tr><td>cnn Saddam Hussein</td></tr>
  	</table>
  </description>
  <category>News</category>
  <link>http://www.cnn.com/</link>
  
  <form name="cnnf"
        action="http://cnn.looksmart.com/r_search"
        method="get">
    <input type="hidden" name="sites" value="CNN"/>
    <input type="hidden" name="qc" value=""/>
    <input type="hidden" name="col" value="cnni"/>
    <input type="hidden" name="qm" value="0"/>
    <input type="hidden" name="st" value="1"/>
    <input type="hidden" name="nh" value="10"/>
    <input type="hidden" name="lk" value="1"/>
    <input type="hidden" name="rf" value="1"/>
    <input type="hidden" name="look" value=""/>
    <input type="hidden" name="key" value=""/>
    <input type="hidden" name="venue" value="all"/>
    <input type="hidden" name="keyword" value=""/>
    <input type="hidden" name="qp" value=""/>
    <input type="hidden" name="comefrom" value="izch-search"/>
    <input type="hidden" name="isp" value="zch"/>
    <input type="hidden" name="search" value="0"/>
    <input type="hidden" name="qt" value=""/>
  </form>
  
  <script><![CDATA[
    function cnn(q)
    {
      if( nullArgs("cnn",q) )
        return false;
      else
      {
        document.cnnf.qt.value = document.cnnf.key.value = q;
        submitForm(cnnf);
      }
    }
  ]]></script>

