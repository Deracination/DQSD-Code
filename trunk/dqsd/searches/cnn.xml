    <script><![CDATA[
    function cnn(q)
    {
      if (q == "")
      {
        openSearchWindow("http://www.cnn.com/");
      }
      else
      {
        document.cnnf.qt.value=q;
        document.cnnf.key.value=q;
        document.cnnf.isp.value="zch";
        submitForm(cnnf);
      }
    }
    ]]></script>
