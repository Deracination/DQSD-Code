<search function="sw">
  <name>SurfWax</name>
  <description>
    Delivers results from a broad range of sources including the visible and invisible Web, newsfeeds, and intranets.<br/>
    <div class="helpboxDescLabels">Example:</div>
    <table class="helpboxDescTable">
  		<tr><td>sw horses</td></tr>
  	</table>
  </description>
  <category>Search the Web</category>
  <link>http://www.surfwax.com/</link>
  <contributor>robbyh</contributor>
  <email>robbyh_at_yahoo_dot_com</email>
  
  <form name="swf"
      action="http://www.surfwax.com/servlet/com.surfwax.FrontEnd.home">
      <input type="hidden" name="cmd" value="frames"/>
      <input type="hidden" name="search" value=""/>
      <input type="hidden" name="max" value="100"/>
      <input type="hidden" name="sort" value="alpha"/>
      <input type="hidden" name="summaries" value="checked"/>
  </form>
  
  <script><![CDATA[
    function sw(q)
    {
      if( nullArgs("sw",q) )
        return false;
      else
      {
        document.swf.search.value = q;
        submitForm(swf);
      }
    }
  ]]></script>
</search>
