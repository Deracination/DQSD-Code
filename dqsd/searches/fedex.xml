<search function="fedex">
  <name>Track FedEx Packages</name>
  <description>Separate tracking numbers by commas: "fedex 40012345678, 40012345679"</description>
  <category>Shipping</category>
  <link>http://www.fedex.com/</link>
  <contributor>Glenn Carr</contributor>
  <idea>stickyc's buddy</idea>
  <form name="fedexf"
        target="_blank"
        action="http://www.fedex.com/cgi-bin/tracking"
        method="get">
    <input type="hidden" name="tracknumbers"/>
    <input type="hidden" name="action" VALUE="track"/>
    <input type="hidden" name="language" VALUE="english"/>
    <input type="hidden" name="cntry_code" VALUE="us"/>
  </form>
  <script><![CDATA[
    function fedex(q, switches)
    {
      if( q == "" )
        openSearchWindow("http://www.fedex.com/");
      else
      {
        document.fedexf.tracknumbers.value = q;
        submitForm(fedexf);
      }
    }
  ]]></script>
</search>
