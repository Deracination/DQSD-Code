<search function="atm">
  <name>Atomica</name>
	<description>
    Search for information on almost any subject.<br/>
    <a class="helpboxDescLabels">Example:</a><br/>
    <table class="helpBoxDescTable">
  		<tr><td class="helpboxDescColumns">atm civil war</td></tr>
  	</table>
  </description>
  <category>Reference</category>
	<link>http://www.atomica.com/</link>
	<contributor>Chris Farmer</contributor>
  
	<form name="atmf"
				action="http://lookup.atomica.com/atomica/frame.pl"
				method="get">
		<input type="hidden" name="s"/>
		<input type="hidden" name="gwp" value="0"/>
		<input type="hidden" name="cbid" value=""/>
		<input type="hidden" name="fw" value="-1"/>
		<input type="hidden" name="bRegistered" value="1"/>
	</form>
  
	<script><![CDATA[
		function atm(q)
		{
			if (q == "")
			  openSearchWindow("http://www.atomica.com/");
			else
			{
				document.atmf.s.value = q;
				submitForm(atmf);
			}
		}
	]]></script>
</search>
